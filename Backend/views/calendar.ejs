<!DOCTYPE html>
<html>
<head>
    <title>Appointment Calendar</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <h1>Calendar</h1>

    <table>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Date & Time</th>
            <th>Action</th>
        </tr>

        <% appts.forEach(a => { %>
        <tr>
            <td><%= a.patient %></td>
            <td><%= a.doctor %></td>
            <td><%= a.datetime %></td>
            <td><a class="delete" href="/delete/<%= a.id %>">Delete</a></td>
        </tr>
        <% }) %>

    </table>

    <a href="/">Back to Home</a>

</body>
</html>
